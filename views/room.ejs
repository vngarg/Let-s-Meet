<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Let's Meet</title>
    <link href="style.css" rel="stylesheet" />
    <script src='/socket.io/socket.io.js'></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script src="https://kit.fontawesome.com/92812d5205.js" crossorigin="anonymous"></script>
</head>

<body>
    <div class="main">
        <div class="main_left">
            <div class="main_videos">
                <div id='video-grid'>

                </div>
            </div>
            <div class="main_controls">
                <div class="main_controls_block">
                    <div onclick="toggleMute()" class="main_controls_button main_mute_button">
                        <i class="fa fa-microphone"></i>
                        <span>Mute</span>
                    </div>
                    <div onclick="toggleVideo()" class="main_controls_button main_video_button">
                        <i class="fa fa-video"></i>
                        <span>Stop Video</span>
                    </div>
                </div>
                <div class="main_controls_block">
                    <div class="main_controls_button">
                        <i class="fas fa-shield-alt"></i>
                        <span>Security</span>
                    </div>
                    <div class="main_controls_button">
                        <i class="fas fa-user-friends"></i>
                        <span>Participants</span>
                    </div>
                    <div class="main_controls_button">
                        <i class="fas fa-comment-alt"></i>
                        <span>Chat</span>
                    </div>
                </div>
                <div class="main_controls_block">
                    <div class="main_controls_button">
                        <span class="leave_meeting">Leave Meeting</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="main_right">
            <div class="main_header">
                <h6>Chat</h6>
            </div>
            <div class="main_chat_window">
                <ul class="messages">

                </ul>
            </div>
            <div class="main_message_container">
                <input id='chat_message' type="text" placeholder="Type the message...." />
            </div>
        </div>
    </div>

    <script>
        const ROOM_ID = "<%= roomId %>";    
    </script>
    <script src="script.js"></script>
</body>

</html>